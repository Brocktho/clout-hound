[sub_resource type="Shader" id="Shader_slowmo_bar"]
code = "shader_type canvas_item;

uniform float taper : hint_range(0.0, 0.5) = 0.35;
uniform float outer_roundness : hint_range(0.0, 0.5) = 0.5;
uniform float inner_roundness : hint_range(0.0, 0.5) = 0.0;
uniform float edge_softness : hint_range(0.0, 0.05) = 0.01;
uniform int taper_side = 2;

void fragment() {
	vec2 uv = UV;
	vec2 p = uv - vec2(0.5);
	float half_width = 0.5;
	float half_height = 0.5;

	float x = 0.0;
	if (taper_side == 0) {
		x = 1.0 - uv.x;
	} else if (taper_side == 1) {
		x = uv.x;
	} else if (taper_side == 2) {
		x = abs(p.x) / half_width;
	}
	float height_scale = mix(1.0, 1.0 - taper, smoothstep(0.3, 1.0, x));
	float hh = half_height * height_scale;
	float r_tl = inner_roundness;
	float r_bl = inner_roundness;
	float r_tr = inner_roundness;
	float r_br = inner_roundness;
	if (taper_side == 0) {
		r_tl = outer_roundness;
		r_bl = outer_roundness;
	} else if (taper_side == 1) {
		r_tr = outer_roundness;
		r_br = outer_roundness;
	} else if (taper_side == 2) {
		r_tl = outer_roundness;
		r_bl = outer_roundness;
		r_tr = outer_roundness;
		r_br = outer_roundness;
	}

	vec4 r = vec4(r_tl, r_bl, r_tr, r_br);
	if (p.x > 0.0) {
		r.xy = r.zw;
	}
	float rr = (p.y > 0.0) ? r.x : r.y;
	rr = min(rr, min(half_width, hh));

	vec2 q = abs(p) - vec2(half_width, hh) + vec2(rr);
	float dist = length(max(q, vec2(0.0))) + min(max(q.x, q.y), 0.0) - rr;
	float aa = fwidth(dist) + edge_softness;
	float alpha = 1.0 - smoothstep(0.0, aa, dist);

	vec4 base = COLOR;
	COLOR = vec4(base.rgb, base.a * alpha);
}
"


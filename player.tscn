code = "shader_type canvas_item;

uniform float line_count : hint_range(0.0, 500.0) = 120.0;
uniform float line_density : hint_range(0.0, 1.0) = 0.5;
uniform float line_width : hint_range(0.0, 1.0) = 0.25;
uniform float mask_size : hint_range(0.0, 1.0) = 0.1;
uniform float mask_edge : hint_range(0.0, 1.0) = 0.5;
uniform float animation_speed : hint_range(0.0, 20.0) = 10.0;
uniform vec4 line_color : source_color = vec4(1.0, 1.0, 1.0, 0.3);

float random(vec2 st) {
    return fract(sin(dot(st.xy, vec2(12.9898, 78.233))) * 43758.5453123);
}

void fragment() {
    vec2 uv = UV - 0.5;
    float angle = atan(uv.y, uv.x);
    float radius = length(uv);
    
    float angle_segment = angle * line_count;
    float angle_id = floor(angle_segment);
    float angle_fract = fract(angle_segment);
    
    float time = floor(TIME * animation_speed);
    float n = random(vec2(angle_id, time));
    
    // Determine if this segment has a spike
    float has_spike = step(1.0 - line_density, n);
    
    // Spike shape: narrow at center, wide at edge
    // dist from center of the angular segment
    float dist = abs(angle_fract - 0.5) * 2.0;
    
    // The spike is visible if dist is small. 
    // We want it to be sharper, so we use a small line_width.
    // And we want it to taper: it should be visible over a larger 'dist' when radius is large.
    float taper = smoothstep(0.0, 1.0, radius);
    float spike = smoothstep(line_width * taper, (line_width * 0.5) * taper, dist);
    
    // Fade the spike as it goes towards the center
    float radial_fade = smoothstep(mask_size, mask_size + mask_edge, radius);
    
    float final_alpha = has_spike * spike * radial_fade * line_color.a;
    
    COLOR = vec4(line_color.rgb, final_alpha);
}
"


[sub_resource type="Shader" id="Shader_slowmo_waves"]
code = "shader_type canvas_item;
render_mode unshaded;

uniform sampler2D screen_texture : hint_screen_texture;
uniform float intensity : hint_range(0.0, 0.05) = 0.012;
uniform float edge_width : hint_range(0.0, 0.5) = 0.22;
uniform float wave_scale : hint_range(0.0, 40.0) = 16.0;
uniform float wave_speed : hint_range(0.0, 10.0) = 1.6;

float edge_mask(vec2 uv) {
    vec2 centered = uv - vec2(0.5);
    vec2 abs_center = abs(centered);
    float edge_x = smoothstep(0.5 - edge_width, 0.5, abs_center.x);
    float edge_y = smoothstep(0.5 - edge_width, 0.5, abs_center.y);
    return clamp(max(edge_x, edge_y), 0.0, 1.0);
}

void fragment() {
    vec2 uv = SCREEN_UV;
    float edge = edge_mask(uv);
    vec2 centered = uv - vec2(0.5);
    float wave = sin((centered.x + centered.y) * wave_scale + TIME * wave_speed);
    vec2 offset = centered * (wave * intensity) * edge;
    vec4 base_color = texture(screen_texture, uv);
    vec4 wave_color = texture(screen_texture, uv + offset);
    COLOR = mix(base_color, wave_color, edge);
}
"

